{
  "name": "react-dialog-manager-monorepo",
  "private": true,
  "workspaces": [
    "library",
    "test",
    "example"
  ],
  "scripts": {
    "prepare": "husky install",
    "lint": "biome check .",
    "format": "biome format . --write",
    "build:lib": "yarn workspace react-dialog-manager build",
    "build:test": "yarn workspace test build",
    "build:example": "yarn workspace example build",
    "dev:lib": "yarn workspace react-dialog-manager dev",
    "dev:test": "yarn workspace test dev",
    "dev:example": "yarn workspace example dev",
    "deploy:example": "yarn workspace example build && npx gh-pages -d example/dist"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome check --apply"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "biome": "^0.3.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1"
  },
  "packageManager": "yarn@4.9.1"
}
